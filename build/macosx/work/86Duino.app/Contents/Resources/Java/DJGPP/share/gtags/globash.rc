bash_minorversion=$(echo ${BASH_VERSINFO[1]} | sed 's/[^0-9]//')
if !(( BASH_VERSINFO[0] > 2 || BASH_VERSINFO[0] == 2 && 10#${bash_minorversion} >= 4 )); then
